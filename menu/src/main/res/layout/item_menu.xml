<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="de.hpi.android.core.utils.FormattingUtilsKt" />

        <variable
            name="menu"
            type="de.hpi.android.menu.domain.Menu" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/space_m">

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{menu.counter.substring(0, 1)}"
            android:textAppearance="?textAppearanceHeadline6"
            android:textStyle="normal"
            android:textColor="?colorOnSurfaceMediumEmphasis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"
            tools:text="1" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_m"
            android:text="@{menu.title}"
            android:textAppearance="?textAppearanceSubtitle1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/counter"
            app:layout_constraintEnd_toStartOf="@id/labels"
            tools:text="Panierte Jagdwurst mit veganer Paprikasauce" />

        <!--TODO: add something like app:visible="@{menu.substitution}""-->
        <TextView
            android:id="@+id/substitution"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_s"
            android:text="@{menu.substitution}"
            android:textAppearance="?textAppearanceBody1"
            android:textColor="?colorOnSurfaceMediumEmphasis"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintEnd_toStartOf="@id/labels"
            tools:text="alternativ: Tofusteak statt Jagdwurst" />

        <LinearLayout
            android:id="@+id/labels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/space_s"
            android:paddingEnd="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
