<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Core.AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/core_brand_primary</item>
        <item name="colorPrimaryVariant">@color/core_brand_primaryVariant</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/core_brand_onPrimary</item>
        <item name="colorOnPrimaryMediumEmphasis">@color/core_brand_onPrimaryMediumEmphasis</item>
        <item name="colorSecondary">@color/core_brand_secondary</item>
        <item name="colorAccent">?colorSecondary</item>
        <item name="colorSecondaryVariant">@color/core_brand_secondaryVariant</item>
        <item name="colorOnSecondary">@color/core_brand_onSecondary</item>

        <item name="colorBackground">@color/core_brand_background</item>
        <item name="android:colorBackground">?colorBackground</item>
        <item name="colorOnBackground">@color/core_material_text_primary_dark</item>
        <item name="android:textColorPrimary">?colorOnBackground</item>
        <item name="android:textColorSecondary">?colorOnBackgroundMediumEmphasis</item>
        <item name="colorOnBackgroundPrimary">@color/core_brand_onBackgroundPrimary</item>
        <item name="colorOnBackgroundMediumEmphasis">@color/core_material_text_secondary_dark</item>
        <item name="colorSurface">@color/core_brand_surface</item>
        <item name="colorOnSurface">@color/core_material_text_primary_dark</item>
        <item name="colorOnSurfaceMediumEmphasis">@color/core_material_text_secondary_dark</item>
        <item name="colorError">@color/core_brand_error</item>
        <item name="colorOnError">@color/core_material_text_primary_light</item>

        <!-- Default Styles -->
        <item name="chipStyle">@style/Core.Widget.Hpi.Chip.Action</item>
        <item name="chipGroupStyle">@style/Core.Widget.Hpi.ChipGroup</item>

        <!-- Text -->
        <item name="textAppearanceOverline">@style/Core.TextAppearance.Hpi.Overline</item>
    </style>

    <style name="Core.AppTheme" parent="Core.AppTheme.Base" />

</resources>
