<resources>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_primaryVariant</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/brand_onPrimary</item>
        <item name="colorOnPrimaryMediumEmphasis">@color/brand_onPrimaryMediumEmphasis</item>
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorAccent">?colorSecondary</item>
        <item name="colorSecondaryVariant">@color/brand_secondaryVariant</item>
        <item name="colorOnSecondary">@color/brand_onSecondary</item>

        <item name="colorBackground">@color/brand_background</item>
        <item name="android:colorBackground">?colorBackground</item>
        <item name="colorOnBackground">@color/material_text_primary_dark</item>
        <item name="android:textColorPrimary">?colorOnBackground</item>
        <item name="android:textColorSecondary">?colorOnBackgroundMediumEmphasis</item>
        <item name="colorOnBackgroundPrimary">@color/brand_onBackgroundPrimary</item>
        <item name="colorOnBackgroundMediumEmphasis">@color/material_text_secondary_dark</item>
        <item name="colorSurface">@color/brand_surface</item>
        <item name="colorOnSurface">@color/material_text_primary_dark</item>
        <item name="colorOnSurfaceMediumEmphasis">@color/material_text_secondary_dark</item>
        <item name="colorError">@color/brand_error</item>
        <item name="colorOnError">@color/material_text_primary_light</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

</resources>
